{
	"name": "sql-learning-app",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"dev:server": "vite --mode server",
		"build": "vite build && yarn build:server && yarn replace:routes",
		"build:server": "vite build --mode server",
		"replace:routes": "echo '{\"version\":1,\"include\":[\"/api/*\"],\"exclude\":[\"/assets/*\",\"/favicon.ico\",\"/index.html\"]}' > dist/_routes.json",
		"preview": "vite preview",
		"pages:dev": "rm -rf ./dist && yarn build && wrangler pages dev --port 8080",
		"test:unit": "vitest",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
		"format": "prettier --write ."
	},
	"dependencies": {
		"hono": "^4.5.8",
		"pinia": "^2.1.7",
		"vue": "^3.4.29",
		"vue-router": "^4.3.3",
		"vuetify": "^3.7.0"
	},
	"devDependencies": {
		"@hono/vite-cloudflare-pages": "^0.4.2",
		"@hono/vite-dev-server": "^0.14.0",
		"@mdi/font": "^7.4.47",
		"@rushstack/eslint-patch": "^1.8.0",
		"@vitejs/plugin-vue": "^5.0.5",
		"@vue/eslint-config-prettier": "^9.0.0",
		"@vue/test-utils": "^2.4.6",
		"eslint": "^8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-import-resolver-custom-alias": "^1.3.2",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-vue": "^9.23.0",
		"eslint-plugin-vuetify": "^2.4.0",
		"jsdom": "^24.1.0",
		"prettier": "^3.2.5",
		"sass": "^1.77.8",
		"unplugin-vue-components": "^0.27.4",
		"vite": "^5.3.1",
		"vite-plugin-eslint": "^1.8.1",
		"vite-plugin-node-polyfills": "^0.22.0",
		"vite-plugin-vue-devtools": "^7.3.1",
		"vite-plugin-vuetify": "^2.0.4",
		"vitest": "^1.6.0",
		"wrangler": "^3.72.2"
	}
}
